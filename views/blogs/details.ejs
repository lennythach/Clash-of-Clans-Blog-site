<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>

    
    <nav>
        
        <ul>
            <li><a href="/blogs">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="blogs/create">Post</a></li>
            <li><a href="/logout">Log out</a></li>
        </ul>
    </nav>


    <div class="detail content">
        <h2><%= blog.title %></h2>
        <div class="content">
            <p><%= blog.body %></p>
            
        </div>
        <a class="delete" data-stuff="<%= blog.id %>">delete</a>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        const deleteStuff = document.querySelector("a.delete");

        deleteStuff.addEventListener("click",(e)=>{
            const endpoint = `/blogs/${deleteStuff.dataset.stuff}`;

            fetch(endpoint, {
                method: 'DELETE'
            })
            .then((response)=> response.json())
            .then((data) => window.location.href = data.redirect )
            .catch((err)=> console.log(err));
        });


    </script>
</body>
</html>